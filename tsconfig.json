{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@types/*": [
        "./types/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@components/*": [
        "./components/*"
      ]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "next-env.d.ts",
    "types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "lib/**/__tests__/**",
    "__tests__/**",
    "tests/**",
    "__mocks__/**",
    "test/**",
    "e2e/**",
    "scripts/temp/**/*.ts",
    "scripts/test/**/*.ts",
    "scripts/manual/**/*.ts",
    "scripts/scheduled/**/*.ts",
    "scripts/fix*.ts",
    "scripts/test-*.ts",
    "scripts/fetch-*.ts",
    "scripts/regenerate-*.ts",
    "lib/fetchers/generic-corporate-rss.ts",
    "lib/recommendation/**",
    "lib/services/**",
    "lib/utils/article-manual-adder.ts",
    "lib/utils/content-quality-checker.ts",
    "lib/utils/quality-score.ts",
    "lib/utils/summary-parser.ts",
    "lib/utils/tech-terms-manager.ts",
    "prisma/**",
    "types/api-responses.ts",
    "types/api-types.ts",
    "types/test-fixtures.ts"
  ]
}
